@using Cato.Web.Models
@model IEnumerable<Cato.Web.Models.PersonViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>People</h2>
<div>
    <div>
        <button type="button" id="New" class="btn btn-info btn-lg" data-toggle="modal" data-target="#newPerson">+New</button>
    </div>

    <div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Friendly Name</th>
                    <th>Name</th>
                </tr>
                </thead>
                <tbody>
                @foreach (PersonViewModel pvm in Model)
                {
                    <tr>
                        <td>@pvm.FriendlyName</td>
                        <td>@Html.ActionLink(pvm.Name, "Person", new { personId=pvm.PersonId})</td>
                    </tr>
                }
                </tbody>
            </table>
        </div> 

    </div>


    <div id="newPerson" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add new person</h4>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Add", "People", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="label" for="Name">Name</label><br>
                            <input type="text" id="Name" name="Name" class="form-control"><br>
                        </div>
                        <div class="form-group">
                            <label class="label" for="FriendlyName">Friendly Name</label><br>
                            <input type="text" id="FriendlyName" name="FriendlyName" class="form-control"><br>
                        </div>
                        <button type="submit" id="btnAdd" class="btn btn-default">Submit</button>
                    }

                </div>
                <div class="modal-footer">
                    
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>
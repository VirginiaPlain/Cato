@model Cato.Web.Models.PersonViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>People</h2>
<div>
    <div>
        <button type="button" id="New" class="btn btn-info btn-lg" data-toggle="modal" data-target="#newPerson">+New</button>
    </div>

    <div id="newPerson" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add new person</h4>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Add", "People", FormMethod.Post, new { id = "jimmy" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.FriendlyName)
                            @Html.TextBoxFor(m => m.FriendlyName)
                        </div>
                        <button type="submit" id="btnAdd" class="btn btn-default">Submit</button>
                    }
                    @*<form role="form" action="People/Add" method="post">
                        <div class="form-group">
                            <label for="Name">Name:</label>
                            <input type="text" class="form-control" id="Name">
                        </div>
                        <div class="form-group">
                            <label for="FriendlyName">Friendly Name:</label>
                            <input type="text" class="form-control" id="FriendlyName">
                        </div>
                        <button type="submit" class="btn btn-default">Save</button>
                    </form>*@
                </div>
                <div class="modal-footer">
                    
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>